<div class="post-container">
  <header class="post-header">
    <h1 class="post-title"><%= @post.title %></h1>
    
    <div class="post-meta">
      <div class="author-info">
        By <strong><%= @post.author %></strong>
      </div>
      
      <div class="publish-info">
        <% if @post.published? %>
          Published on <%= @post.published_at.strftime("%B %d, %Y at %I:%M %p") %>
        <% else %>
          <span class="draft-badge">Draft</span>
        <% end %>
      </div>
    </div>
    
    <div class="post-actions">
      <%= link_to "â† Back to Blog", posts_path, class: "btn btn-secondary" %>
      <%= link_to "Edit Post", edit_post_path(@post), class: "btn btn-outline" %>
      <%= button_to "Delete Post", post_path(@post), 
          method: :delete,
          class: "btn btn-danger",
          form: { style: 'display: inline-block' },
          data: { turbo_confirm: "Are you sure you want to delete this post?" } %>
    </div>
  </header>
  
  <article class="post-content">
    <%= simple_format(@post.content) %>
  </article>
</div>
