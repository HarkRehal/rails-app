<div class="form-container">
  <h2>Edit Resume</h2>

  <%= form_with(model: @resume, local: true, class: "resume-form") do |f| %>
    <% if @resume.errors.any? %>
      <div class="error-messages">
        <h4><%= pluralize(@resume.errors.count, "error") %> prohibited this resume from being saved:</h4>
        <ul>
          <% @resume.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :summary %>
      <%= f.text_area :summary, rows: 5, class: "form-textarea" %>
    </div>

    <div class="form-group">
      <%= f.label :experience %>
      <%= f.text_area :experience, rows: 10, class: "form-textarea" %>
      <small class="form-help">Enter each experience on a new line, starting with a dash (-)</small>
    </div>

    <div class="form-group">
      <%= f.label :projects %>
      <%= f.text_area :projects, rows: 5, class: "form-textarea" %>
    </div>

    <div class="form-group">
      <%= f.label :profile_image %>
      <%= f.text_field :profile_image, class: "form-input" %>
      <small class="form-help">Enter the URL of your profile image</small>
    </div>

    <div class="form-actions">
      <%= f.submit "Save Resume", class: "btn btn-primary" %>
      <%= link_to "Cancel", root_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>